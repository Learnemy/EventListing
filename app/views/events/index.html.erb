<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= image_tag(event.picture_url, width:150) if event.picture.present? %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', event %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <% else %>
          <td><%= link_to 'Sign in to edit!', new_user_session_path %></td>
        <% end %>
        <% if user_signed_in? %>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to 'Sign in to destroy!', new_user_session_path %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

